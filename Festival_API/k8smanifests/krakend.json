{
  "version": 3,
  "name": "Festival and Session API Gateway",
  "port": 8080,
  "timeout": "3s",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/festivals",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/festivals",
      "method": "POST",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/festivals/{f_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals/{{.Params.f_id}}",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/festivals/{f_id}",
      "method": "PUT",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals/{{.Params.f_id}}",
          "method": "PUT"
        }
      ]
    },
    {
      "endpoint": "/festivals/{f_id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals/{{.Params.f_id}}",
          "method": "DELETE"
        }
      ]
    },
    {
      "endpoint": "/festivals/{f_id}/sessions",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals/{{.Params.f_id}}/sessions",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/festivals/{f_id}/sessions",
      "method": "POST",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/festivals/{{.Params.f_id}}/sessions",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/sessions/{s_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/sessions/{{.Params.s_id}}",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/sessions/{s_id}",
      "method": "PUT",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/sessions/{{.Params.s_id}}",
          "method": "PUT"
        }
      ]
    },
    {
      "endpoint": "/sessions/{s_id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://festival-service-api:5000"],
          "url_pattern": "/sessions/{{.Params.s_id}}",
          "method": "DELETE"
        }
      ]
    }
  ]
}