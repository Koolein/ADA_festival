{
  "version": 3,
  "name": "User and Profile API Gateway",
  "port": 8081,
  "timeout": "40s",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/users",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/users",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/users",
      "method": "POST",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/users",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/users/{u_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/users/{{.Input.Params.u_id}}",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/users/{u_id}",
      "method": "PUT",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/users/{{.Input.Params.u_id}}",
          "method": "PUT"
        }
      ]
    },
    {
      "endpoint": "/users/{u_id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/users/{{.Input.Params.u_id}}",
          "method": "DELETE"
        }
      ]
    },
    {
      "endpoint": "/profiles",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/profiles",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/profiles",
      "method": "POST",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/profiles",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/profiles/{p_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/profiles/{{.Input.Params.p_id}}",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/profiles/{p_id}",
      "method": "PUT",
      "input_encoding": "json",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/profiles/{{.Input.Params.p_id}}",
          "method": "PUT"
        }
      ]
    },
    {
      "endpoint": "/profiles/{p_id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://user-service-api:5001"],
          "url_pattern": "/profiles/{{.Input.Params.p_id}}",
          "method": "DELETE"
        }
      ]
    }
  ]
}
